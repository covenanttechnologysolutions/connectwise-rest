{
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2018"],
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "target": "ES2018",
    "useDefineForClassFields": true
  },
  "typedocOptions": {
    "entryPoints": ["src/index.js", "src/ManageTypes.ts"],
    "out": "docs"
  }
}
